@model Prkn.UI.Web.Models.ViewModels.CustomerPersonelList
@using Prkn.Common.Enums;
@{
    ViewBag.Title = Model.HeaderTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-header">
        <h3 class="card-title"><a id="Yeni Ekle" class="btn-lg btn-success" href="@Url.Action("MusteriKisiEdit/"+IslemTuru.Insert+"/"+0,"Musteri")"> Yeni Ekle</a></h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Foto</th>
                    <th>Müşteri Adı</th>
                    <th>İsim</th>
                    <th>Soyisim</th>
                    <th>Ünvan</th>
                    <th>Görev/İş</th>
                    <th>Telefon-1</th>
                    <th>Telefon-2</th>
                    <th>Mail-1</th>
                    <!--<th>Mail-2</th>-->
                    <!--<th>Detaylı Bilgi</th>-->
                    <!--<th>Anahtar Kelime</th>-->
                    <th>Cinsiyet</th>
                    <th>Güncelle</th>
                    <th>SİL</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Prm.Count; i++)
                {
                <tr>
                    <td>
                        @if (Model.Prm[i].Pic == null)
                        {
                            Model.Prm[i].Pic = "~/Content/dist/img/avatar5.png";
                        }
                        <img src="@Url.Content(Model.Prm[i].Pic)" width="40" height="40" class="img-circle elevation-2" alt="Customer Image">
                    </td>
                    <td>@Model.Customer[i].Name</td>
                    <td>@Model.Prm[i].NameFirst</td>
                    <td>@Model.Prm[i].NameLast</td>
                    <td>@Model.Title[i].Name</td>
                    <td>@Model.Prm[i].Job</td>
                    <td>@Model.Prm[i].Phone1</td>
                    <td>@Model.Prm[i].Phone2</td>
                    <td>@Model.Prm[i].Mail1</td>
                    <!--<td>@Model.Prm[i].Mail2</td>-->
                    <!--<td>@Model.Prm[i].Info</td>-->
                    <!--<td>@Model.Prm[i].Keyword</td>-->
                    <td>@Model.Prm[i].Gender</td>
                    <td><a href="@Url.Action(Model.FromRoute+"/"+IslemTuru.Update+"/"+Model.Prm[i].Id, Model.FromController)" type="button" class="btn btn-block btn-success"><i class="fas fa-edit"></i> </a></td>
                    <td><a href="@Url.Action(Model.FromRoute+"/"+IslemTuru.Delete+"/"+Model.Prm[i].Id, Model.FromController)" type="button" class="btn btn-block btn-danger"><i class="fas fa-trash"></i> </a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
<!-- /. İçerikler Buraya-->
